{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2019",
      "dom"
    ],
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./typings"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
  "exclude": ["contrib"]
}
