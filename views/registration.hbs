<div class="auth">
    <div class="container">
        <h1>{{projectName}}</h1>
        <h2>Sign up</h2>

        <div class="kratos-errors">
            {{#each errors}}
                <p>{{ message }}</p>
            {{/each}}
        </div>

        <form action="{{ formAction }}" method="{{ method }}">
            {{> formFields}}
            <button type="submit">Sign Up</button>
        </form>

        <a href="{{baseUrl}}auth/login">Sign in with existing account</a>
    </div>
</div>