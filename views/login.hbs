<div id="login">
  <div class={{styles "card"}}>
    {{#if refresh}}
      <h2 class="typography-h2 card-title container-center">Confirm Action</h2>
    {{else if (eq requested_aal "aal2")}}
      <h2 class="typography-h2 card-title">Two-Factor Authentication</h2>
    {{else if hydra_login_request}}
      <h2 class="typography-h2 card-title">Sign in</h2>
      <p>To authenticate {{#if hydra_login_request.client.client_name}}{{hydra_login_request.client.client_name}}{{else}}{{hydra_login_request.client.client_id}}{{/if}}</p>
    {{else}}
      <h2 class="typography-h2 card-title container-center">Sign In</h2>
    {{/if}}

    <div class="container-center">
      <div class="divider"></div>
    </div>

    <div class="card-oidc">
      {{> ui ui=ui groups="oidc" attributes="submit"}}
    </div>

    {{> messages messages=messages className="global"}}

    {{> ui ui=ui groups="password" attributes="password,text" }}

    <a href="recovery" class="" data-testid="forgot-password-link">Forgot Password?</a>

    {{> ui ui=ui groups="password" attributes="submit" }}

  </div>

  {{#if isAuthenticated}}
    <div class="card">
      <div class="card-action">
        <a class="typography-link typography-h2" data-testid="logout-link" href="{{logoutUrl}}">Log out</a>
      </div>
    </div>
  {{else}}
    <div class="card">
      <div class="card-action">
        <a class="typography-link typography-h2" data-testid="cta-link" href="{{signUpUrl}}">Create account</a>
      </div>
    </div>
    <div class="card">
      <div class="card-action">
        <a class="typography-link typography-h2" data-testid="forgot-password" href="recovery">Recover
          your account</a>
      </div>
    </div>
  {{/if}}
</div>
